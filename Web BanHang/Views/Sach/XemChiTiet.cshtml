                            <img src="@Url.Content("~/HinhAnh/"+Model.AnhBia)" class="img-fluid">
                        </div>
                        <div class="item carousel-item" data-slide-number="1">
                            <img src="@Url.Content("~/HinhAnh/"+Model.AnhBia)" class="img-fluid">
                        </div>
                        <div class="item carousel-item" data-slide-number="2">
                            <img src="@Url.Content("~/HinhAnh/"+Model.AnhBia)"class="img-fluid" />                           
                        </div>
                    </div>
                    <!-- main slider carousel nav controls -->
                    @*<ul class="carousel-indicators list-inline">
                        <li class="list-inline-item active">
                            <a id="carousel-selector-0" class="selected" data-slide-to="0" data-target="#myCarousel">
                                <img src="@Url.Content("~/HinhAnh/"+Model.AnhBia)" class="img-fluid">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a id="carousel-selector-1" data-slide-to="1" data-target="#myCarousel">
                                <img src="@Url.Content("~/HinhAnh/"+Model.AnhBia)" class="img-fluid">
                            </a>
                        </li>
                        <li class="list-inline-item">
                            <a id="carousel-selector-2" data-slide-to="2" data-target="#myCarousel">
                                <img src="@Url.Content("~/HinhAnh/"+Model.AnhBia)" class="img-fluid">
                            </a>
                        </li>
                    </ul>*@
                </div>
                <!--/main slider carousel-->
            </div>
            <div class="col-md-6 slider-content">
                <p>@Model.MoTa </p>
                <ul>
                    <li>
                        <span class="name">Nhà Xuất Bản</span><span class="clm">:</span>
                        <span class="price final" style="color:hotpink;font-size:medium">@ViewBag.TenNXB</span>
                    </li>
                    <li>
                        <span class="name">Chủ Đề</span><span class="clm">:</span>
                        <span class="price final" style="color:hotpink; font-size:medium">@ViewBag.TenChuDe </span>
                    </li>
                    <li>
                        <span class="name">Mã sách</span><span class="clm">:</span>
                        <span class="price final" style="color:hotpink;font-size:medium">@Model.MaSach</span>
                    </li>
                    <li>
                        <span class="name">Giá</span><span class="clm">:</span>
                        <span class="price final" style="color:hotpink;font-size:medium">@Model.GiaBan</span>
                    </li>
                    @*<li><span class="save-cost">Save $7.62 (69%)</span></li>*@
                </ul>
                <div class="btn-sec">
                    @using (Html.BeginForm("ThemGioHang", "GioHang", new { @iMaSach = Model.MaSach, @strUrl = Request.Url.ToString() }))
                    {

                        <button class="btn" type="submit" id="btnGioHang">Add to cart</button>
                    } 

                    @using (Html.BeginForm("GioHang","GioHang", new { @iMaSach= Model.MaSach }))
                    {
                        <button class="btn" type="submit" id="btnDatHang">By Now</button>
                    }
                </div>
        </div>
    </div>
</section>
