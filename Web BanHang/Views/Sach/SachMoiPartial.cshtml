@using Web_BanHang.Models;
@model List<Sach>

@{
    foreach (var item in Model)
    {
        <div class="col-lg-3 col-md-6">
            <div class="item">
                <a href="@Url.Action("XemChiTiet","Sach",new {@masach = item.MaSach }) "></a>
                <img src="@Url.Content("~/HinhAnh/"+item.AnhBia)" alt="img">
                <h3>@item.TenSach</h3>
                <h6><span class="price">@item.GiaBan</span> / <a href="#">Buy Now</a></h6>
                <div class="hover">
                    <a href=" @Url.Action("XemChiTiet","Sach",new {@masach = item.MaSach })">
                        <span><i class="fa fa-long-arrow-right" aria-hidden="true"></i></span>
                    </a>
                </div>
            </div>
        </div>
    }
}