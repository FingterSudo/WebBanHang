@using Web_BanHang.Models;
@model List<Sach>
@{
    ViewBag.Title = "SachTheoChuDe";
    Layout = "~/Views/Layout/NguoiDungLayout.cshtml";
}

@ViewBag.Sach

<div class="breadcrumb">
    <div class="container">
        <a class="breadcrumb-item" href="index.html">Trang chủ</a>
        <span class="breadcrumb-item active">Sách theo chủ đề </span>
        <span class="breadcrumb-item active">Số lượng sách có trong chủ đề: @Model.Count</span>
    </div>
</div>

<section class="recent-book-sec">
    <div class="container">
        <div class="title">
            <h2>Sách theo chủ đề  </h2>
            <hr>
        </div>
        <div class="row">
            @if (Model.Count == 0)
            {
                <div class="col-lg-2 col-md-3 col-sm-4">

                    <h2>Không có cuốn sách nào theo chủ đề này</h2>

                </div>
            }

            @foreach (var item in Model)
            {

                <div class="col-lg-2 col-md-3 col-sm-4">
                    <div class="item">
                        <img src="~/images/r1.jpg" alt="img">
                        <h3><a href="@Url.Action("XemChiTiet","Sach",new{@MaSach= item.MaSach})"> @item.TenSach</a></h3>
                        <h6><span class="price"> @item.GiaBan</span> / <a href="#">Buy Now</a></h6>
                    </div>
                </div>
            }
        </div>

        <div class="btn-sec">
            <a href="#" class="btn gray-btn">view all books</a>
        </div>
    </div>
</section>
)