@model Web_BanHang.Models.Sach

@{
    ViewBag.Title = "Thêm mới";
    Layout = "~/Views/Layout/AdminLayout.cshtml";
}

<h2>Tạo Sách</h2>

@using (Html.BeginForm("ThemMoi","QuanLySanPham",FormMethod.Post, new { @enctype="multipart/form-data"}))
{
    @Html.AntiForgeryToken()
    
<div class="form-horizontal">
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.TenSach, htmlAttributes: new { @class = "control-label col-md-2" })
