@{
    ViewBag.Title = "DangNhap";
    Layout = "~/Views/Layout/DangKyLayout.cshtml";
}
@ViewBag.ThongBao
@using (Html.BeginForm())
{
    <div class="form-horizontal">
        <h4>Đăng nhập</h4>
        <div class="form-group">
            <span>Tài Khoản</span>
            <div class="col-md-4">
                @Html.TextBox("txtTaiKhoan");
            </div>
        </div>
        <div class="form-group">
            <span>Mật khẩu:</span>
            <div class="col-md-4">
                <input name="txtMatKhau" type="password" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-4">
                <input type="submit" id="btnSumit" value="Đăng Nhập" class="btn btn black" />
                <h6>không Đăng Nhập? <a href="login.html">Đăng Ký</a></h6>
            </div>
        </div>

    </div>
}