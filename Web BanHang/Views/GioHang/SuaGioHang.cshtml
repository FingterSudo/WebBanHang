<h2 class="text-center">Giỏ Hàng </h2>
<div class="container">
    <table id="cart" class="table table-hover table-condensed">
        <thead>
            <tr>
                <th style="width:50%">Tên sản phẩm</th>
                <th style="height:5%; width:15%">Ảnh sản phẩm </th>
                <th style="width:10%">Giá</th>
                <th style="width:5%">Số lượng</th>
                <th style="width:22%" class="text-center">Thành tiền</th>
                <th style="width:10%"> </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr></tr>
            <td data-th="Product">
                <div class="row">
                    <div class="col-sm-10">
                        <h6>@item.sTenSach</h6>
                    </div>
                </div>
            </td>
            <td data-th="Product">
                <div class="row">
                    <div class="col-sm-10">
                        <a href="@Url.Action("XemChiTiet", "Sach", new { @MaSach =item.iMaSach})">
                            <img src="@Url.Content("~/HinhAnh/"+item.sAnhBia)" alt="Image" />
                        </a>
                    </div>
                </div>
            </td>
            <td data-th="Price">@String.Format("{0:0,0}", item.dDonGia)</td>
            using (Html.BeginForm("CapNhapGioHang", "GioHang", new { @iMaSP = item.iMaSach }))
            {
                <td data-th="Quantity">
                    @Html.TextBox("txtSoLuong", @item.iSoLuong )

                </td>
                <td data-th="Subtotal" class="text-center">@String.Format("{0:0,0}", item.dDonGia)</td>

                <td> <input type="submit" value="Cập Nhập" /></td>
                <td class="actions" data-th="">
                    <a href="@Url.Action("XoaGioHang", new { @iMaSP =item.iMaSach})" onclick="return confirm('bạn có chắc xóa sản phẩm này?');" class="btn btn-danger btn-sm">

                        <i class="fa fa-trash" aria-hidden="true"></i>
                    </a>
                    @*@html.actionlink("xoá","xoagiohang", new { @imasp = item.imasach })*@

                </td>

            }

        }

